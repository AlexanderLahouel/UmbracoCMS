@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.BrandsSection)Model.Content;
    var brandBox = content.BrandBox;

    <section class="relative bg-neutral pt-16 pb-24 z-10">
        <div class="max-w-6xl mx-auto px-4 text-center">
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-8 place-items-center">
                @foreach (var item in content.BrandBox)
                {
                    var brand = item.Content as ContentModels.BrandIcon;
                    var logo = brand?.BrandLogo;

                    if (logo != null)
                    {
                        <img src="@logo.Url()"
                             alt="Brand logo"
                             class="h-auto w-auto object-contain opacity-70 hover:opacity-100 transition-opacity duration-300" />
                    }
                }
            </div>
        </div>
    </section>

}