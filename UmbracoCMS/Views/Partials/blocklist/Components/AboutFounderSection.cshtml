@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutFounderSection)Model.Content;
}

<section class="py-24">
    <div class="max-w-7xl mx-auto px-8 grid grid-cols-1 md:grid-cols-2 gap-12 items-start">


        <div class="flex flex-col items-center md:items-start">
            <img src="@content.FounderImage?.Url()" alt="@content.FounderInfo" class="rounded-md mb-4 max-w-lg w-full h-auto" />
            <p class="italic text-sm text-gray-600">@content.FounderInfo</p>
        </div>

        <div>
            @if (!string.IsNullOrEmpty(content.FounderQuote))
            {
                <blockquote class="italic text-lg text-gray-600 mb-6">
                    “@content.FounderQuote”
                </blockquote>
            }

            <div class="rte text-body-text leading-relaxed">
                @Html.Raw(content.FounderBody)
            </div>
        </div>
    </div>
</section>
