@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.InfoCard)Model.Content;
    var bgColor = content.InfoBackgroundColor ?? "bg-white";
    var textColor = bgColor == "bg-primary" ? "text-neutral" : "text-body-text";
}

<div class="p-6 mt-4 rounded-md shadow-sm @bgColor flex flex-col gap-4">

    @if (!string.IsNullOrEmpty(content.InfoTitle))
    {
        <h2 class="text-[1.375rem] font-semibold @textColor">@content.InfoTitle</h2>
    }


    @if (content.InfoImage != null)
    {
        <img src="@content.InfoImage.Url()" alt="@content.InfoImage.Name" class="w-full rounded-md" />
    }


    @if (!string.IsNullOrEmpty(content.InfoText))
    {
        <p class="text-[0.875rem] font-normal not-italic @textColor">@content.InfoText</p>
    }


    @if (!string.IsNullOrEmpty(content.InfoEmailLabel))
    {
        <div class="pt-4">
            <div class="flex items-center justify-between bg-neutral rounded-md px-4 py-3">
                <span class="text-[0.875rem] text-body-text-100 font-normal not-italic">@content.InfoEmailLabel</span>
                <i class="fa-solid fa-envelope text-body-text-100 text-[1rem]"></i>
            </div>
        </div>
    }
</div>
